@page
@model CatCentral.Pages.Foods.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Food and Treats</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Food.Name" class="control-label"></label>
                <input asp-for="Food.Name" class="form-control" />
                <span asp-validation-for="Food.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.Brand" class="control-label"></label>
                <input asp-for="Food.Brand" class="form-control" />
                <span asp-validation-for="Food.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.Quantity" class="control-label"></label>
                <input asp-for="Food.Quantity" class="form-control" />
                <span asp-validation-for="Food.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.Price" class="control-label"></label>
                <input asp-for="Food.Price" class="form-control" />
                <span asp-validation-for="Food.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.SpecialDescription" class="control-label"></label>
                <input asp-for="Food.SpecialDescription" class="form-control" />
                <span asp-validation-for="Food.SpecialDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<style>
    body {
        background-image: url('/Images/catfood.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        margin: 0;
        font-family: 'Comic Sans MS', cursive;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
